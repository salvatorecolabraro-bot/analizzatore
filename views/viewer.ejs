<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>SDIR - Visitatori</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <header>
    <h1>Visualizzazione File</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/admin/login">Admin</a>
    </nav>
  </header>
  <main>
    <section class="card">
      <h2>File disponibili</h2>
      <% if (files.length === 0) { %>
        <p>Nessun file presente.</p>
      <% } else { %>
        <ul>
          <% files.forEach(f => { %>
            <li>
              <a href="/file/<%= f %>"><%= f %></a>
            </li>
          <% }) %>
        </ul>
      <% } %>
  </section>

    <section class="card">
      <h2>Sotto-sezione SDIR (tutti i file)</h2>
      <% if (!tnRows || tnRows.length === 0) { %>
        <p>Nessun dato SDIR trovato.</p>
      <% } else { %>
        <table class="table">
          <thead>
            <tr>
              <th>NODE</th>
              <th>ID</th>
              <th>RiL</th>
              <th>BOARD</th>
              <th>SFPLNH</th>
              <th>PORT</th>
              <th>VENDOR</th>
              <th>VENDORPROD</th>
              <th>REV</th>
              <th>SERIAL</th>
              <th>DATE</th>
              <th>ERICSSONPROD</th>
              <th>WL</th>
              <th>TEMP</th>
              <th>TXbs</th>
              <th>TXdBm</th>
              <th>RXdBm</th>
              <th>BER</th>
            </tr>
          </thead>
          <tbody>
            <% tnRows.forEach(r => { %>
              <tr>
                <td><%= (r.file || '').toUpperCase() %></td>
                <td><%= r.id %></td>
                <td><%= r.ril %></td>
                <td><%= r.board %></td>
                <td><%= r.sfplnh %></td>
                <td><%= r.port %></td>
                <td><%= r.vendor %></td>
                <td><%= r.vendorprod %></td>
                <td><%= r.rev %></td>
                <td><%= r.serial %></td>
                <td><%= r.date %></td>
                <td><%= r.ericssonprod %></td>
                <td><%= r.wl %></td>
                <td><%= r.temp %></td>
                <td><%= r.txbs %></td>
                <td><%= r.txdbm %></td>
                <td><%= r.rxdbm %></td>
                <td><%= r.ber %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </section>
  </main>
</body>
</html>